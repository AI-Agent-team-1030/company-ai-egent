rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 会話 - ユーザーは自分の会話のみアクセス可能
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.userId;

      // 会話内のメッセージ
      match /messages/{messageId} {
        allow read, write: if request.auth != null
          && get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid;
      }
    }

    // ドキュメント - 同じ会社のユーザーがアクセス可能
    match /documents/{documentId} {
      allow read: if request.auth != null
        && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == resource.data.companyId;
      allow create: if request.auth != null
        && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == request.resource.data.companyId;
      allow update, delete: if request.auth != null
        && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == resource.data.companyId;
    }

    // フォルダ - 同じ会社のユーザーがアクセス可能
    match /folders/{folderId} {
      allow read: if request.auth != null
        && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == resource.data.companyId;
      allow create: if request.auth != null
        && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == request.resource.data.companyId;
      allow update, delete: if request.auth != null
        && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == resource.data.companyId;
    }

    // ファイル検索ストア - 同じ会社のユーザーがアクセス可能
    match /fileSearchStores/{storeId} {
      allow read: if request.auth != null
        && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == resource.data.companyId;
      allow create: if request.auth != null
        && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == request.resource.data.companyId;
      allow update, delete: if request.auth != null
        && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == resource.data.companyId;
    }

    // プロフィール - ユーザーは自分のプロフィールのみアクセス可能
    match /profiles/{userId} {
      allow read, update: if request.auth != null
        && request.auth.uid == userId;
      allow create: if request.auth != null
        && request.auth.uid == userId;

      // 個人プロンプトテンプレート - ユーザーは自分のテンプレートのみアクセス可能
      match /promptTemplates/{templateId} {
        allow read, write: if request.auth != null
          && request.auth.uid == userId;
      }
    }

    // 企業情報 - 認証済みユーザーは読み取り可能（サインアップ時の企業検索のため）
    match /companies/{companyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null
        && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == companyId;

      // 企業共有プロンプトテンプレート - 同じ会社のユーザーがアクセス可能
      match /promptTemplates/{templateId} {
        allow read: if request.auth != null
          && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
          && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == companyId;
        allow create: if request.auth != null
          && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
          && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == companyId;
        allow update, delete: if request.auth != null
          && exists(/databases/$(database)/documents/profiles/$(request.auth.uid))
          && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.companyId == companyId;
      }
    }

    // その他は拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
